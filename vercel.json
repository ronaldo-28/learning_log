{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
  "builds": [
    {
      "src": "ll_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12",
        "includeFiles": [
          "ll_project/**",
          "learning_logs/**",
          "accounts/**",
          "staticfiles/**",
          "manage.py",
          "requirements.txt",
          "pyproject.toml",
          "uv.lock"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ll_project/wsgi.py"
    }
  ]
}